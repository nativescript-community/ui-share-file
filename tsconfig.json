{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": false,
        "declaration": true,
        "noLib": false,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "lib": ["es6", "dom", "es2018.promise"],
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "outDir": "./plugin",
        "rootDir": "src",
        "paths": {
            "@nativescript-community/ui-share-file": ["./src"],
            "@nativescript/core": ["./node_modules/@nativescript/core"],
            "@nativescript/core/*": ["./node_modules/@nativescript/core/*"],
            "*": ["./node_modules/*"]
        },
        "plugins": [
          { "transform": "./node_modules/@nativescript/webpack/transformers/ns-transform-native-classes", "type": "raw" }
        ]
    },
    "include": ["src/**/*.ts", "references.d.ts", "src/references.d.ts"],
    "exclude": ["node_modules", ".git", "dist"],
    "compileOnSave": false
}
